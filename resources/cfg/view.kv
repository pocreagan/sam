<RootWidget>:
    orientation: 'vertical'

    bottom_bar: bottom_bar

    TopBar:
        size_hint: 1, .2

    MDSeparator:
        height: "2dp"

    BoxLayout:
        id: bottom_bar
        orientation: 'vertical'
        size_hint: 1, .8


